{
  "name": "@medical-spa/backend",
  "version": "1.0.0",
  "description": "Medical Spa Platform API Server (Cloud Run)",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
