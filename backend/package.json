    "@medical-spa/validations": "*",
    "@sendgrid/mail": "^8.1.6",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "firebase-admin": "^13.0.1",
    "hono": "^4.6.12",
    "rrule": "^2.8.1",
    "twilio": "^5.10.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@prisma/client": "^5.22.0",
    "@types/node": "^20.10.0",
    "prisma": "^5.22.0",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3",
